@using VendorOrder.Models;

<h3>Here are all of the Orders for @Model["vendors"].Name:</h3>

@if (Model["orders"].Count == 0)
{
  <p>This vendor has no orders</p>
}
<ol>
  @foreach (Order order in @Model["orders"])
  {
    <li><a href='/vendors/@Model["vendors"]/orders/@order.Id'>@order.Title</a></li>
  }
</ol>

<p><a href='/vendors/@Model["vendors"].Id/orders/new'>Add a new Order</a></p>
<p><a href='/vendors'>Return to Vendor List</a></p>
<p><a href='/'>Return to Main Page</a></p>